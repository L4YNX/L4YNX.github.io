@a*x<sup>2</sup> +@b*x +@c
<br />
@b<sup>2</sup> -4*@a*@b = @delta
<br />
@pier

<br />
<button class="przyc" @onclick="Oblicz">Oblicz</button>
<br />
<b>@brak</b><br />
x<sub>1</sub>= @x1
<br />
x<sub>2</sub>= @x2
<br />
<a target="_blank" href="https://www.matemaks.pl/program-do-rysowania-wykresow-funkcji.html">Tu mozesz sobie narysowac jak wyglada ta funkcja</a>
@code {
    private double a, b, c, delta,x1,x2;
    private string error,brak,pier;
    private byte pierwiastki;

    private void Oblicz(){
        if (a==0)
        {
            error = "a nie moze byc 0";
        }else{
            error = "";

            delta = (b * b) - (4 * a * c);

            if (delta < 0) pierwiastki = 0;
            if (delta == 0) pierwiastki = 1;
            if (delta > 0) pierwiastki = 2;
        }
        switch(pierwiastki){

            case 0:
                brak = "Brak Wyników!";
                x1 = 0;
                x2 = 0;
                pier = "";
                break;

            case 1:
                x1 = -b / (2 * a);
                x2 = 0;
                brak = "";
                pier = "√"+@delta;
                break;

            case 2:
                x1 = (-b - Math.Sqrt(delta)) / (2 * a);
                x2 = (-b + Math.Sqrt(delta)) / (2 * a);
                brak = "";
                pier = "√"+@delta;
                break;
        }
        x1 = double.Parse(String.Format("{0:N2}", x1));
        x2 = double.Parse(String.Format("{0:N2}", x2));
    }
}
